
@{
    ViewBag.Title = "Index";
}
<script>
    $(function () {
        $('#table').datagrid({
            toolbar: '#maintabletoolbar',
            fit: true,
            border: false,
            fitColumns: true,
            url: '/Message/Get',
            
            //分页
            pagination: true,
            rownumbers: true,
            pageList: [1, 2, 5, 10, 20, 30, 40, 50],
            closable: true,
            collapsible: true,
            
            //checkOnSelect: false,
            selectOnCheck: false,
            singleSelect: false,
            columns: [[
                      {
                          field: 'ck',
                          checkbox: true
                      }, {
                          field: 'FromName',
                          title: '发送人',
                          width: 60,
                          align: 'center',
                          formatter:
                              function (value, row) {
                                  return value.FromId + ' | ' + value.NickName + " | "+(value.RealName ? value.RealName : "");
        }
                      }, {
                          field: 'ToName',
                          title: '接收人',
                          width: 60,
                          align: 'center',
                          formatter:
        function (value, row) {
            return value.ToId + ' | ' + value.NickName + " | " + (value.RealName ? value.RealName : "");
        }
                      },
                      {
                          field: 'Content',
                          title: '消息内容',
                          width: 120,
                          align: 'center',
                          formatter:function(value,row){
                              var content = '<li title="' + value + '" class="tip">' + value + '</li>';
                              return content;
                          }

                      }, {
                          field: 'HasRead',
                          title: '已读',
                          width: 60,
                          align: 'center',
                          formatter: function (value, row, index) {
                              switch (value) {
                                  case true:
                                      return '已读';
                                  case false:
                                      return '未读';
                                  
                              }
                          }
                      }, {
                          field: 'SendTime',
                          title: '发送时间',
                          width: 60,
                          align: 'center',
                          formatter: function (value) { return $.formatJsonDate(value) }
                      }, 
            //          {
            //              field: 'check',
            //              title: '操作',
            //              width: 100,
            //              halign: 'center',
            //              width: 86,
            //              fixed: true,
            //              formatter:
            //                  function (value, row, index) {
            //                  return '<a class="event" onclick="check(' + index + ')">查看</a>'
            //              }
            //          }
            ]],
            onLoadSuccess: function () {
                $('.event').linkbutton({ iconCls: 'icon-event', plain: true });
                $(this).datagrid('fixRowHeight');
            },
            //onLoadSuccess:function(){
            //    $(".tip").tooltip({
            //        onShow: function(){
            //            $(this).tooltip('tip').css({ 
            //                width:'300',        
            //                boxShadow: '1px 1px 3px #292929'                        
            //            });
            //        }
            //    });
            //}

           


        });
    });

    $('#enable').combobox({
        data: [{
            value: 'true',
            text: '已读'
        },
          {
              value: 'false',
              text: '未读'
          }],
        panelHeight: 80,
        editable: false,
        required: true,
    })

</script>

<style>
    #content {
        padding: 10px;
        font-size: 20px;
        text-align: left;
        text-indent: 2em;
    }
</style>



<div id="table">
    <div id="maintabletoolbar">
        
        <table cellpadding="0" cellspacing="0">
            <tr>
               
                @*<td>
                    <a class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="rm()">删除</a>
                </td>*@
              
                <td>
                    <input id="searchbox" class="easyui-searchbox" style="width:200px" prompt="请输入搜索的内容" data-options="searcher:function(value){$('#table').datagrid('load',{keyword:value})}" />
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="easyui-linkbutton" iconcls="icon-reload" plain="true" onclick="$('#table').datagrid('reload')">刷新</a>
                </td>
            </tr>
        </table>
    </div>
</div>

